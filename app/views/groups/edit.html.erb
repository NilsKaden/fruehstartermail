<h1>Edit Group</h1>

<%= form_for(@group) do |f| %>
    <%= f.label :Groupname %>
    <%= f.text_field :name %>
    
    <%= f.label :Subject %>
    <%= f.text_field :subject %>
    
    <%= f.label :Content %>
    <%= f.text_area :content %>
    
    <%= f.label :Datum %>
    <%= f.date_field :datum %>
    
    <%= f.label :Activate %>
    <%= f.check_box(:activator)%>
    
    <%= f.submit "Save Changes", class:"btn" %>
<% end %>
    
