<h1>fruehstarter Newsletter</h1>

<table>
    <tr>
        <th>Vorname</th>
        <th>Nachname</th>
        <th>Geburtstag</th>
        <th>Email</th>
    </tr>
    
    <% @sortedUsers.each do |user| %>
        <tr>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.birthday.mday %>.<%= user.birthday.mon %>.<%= user.birthday.year %></td>
            <td><%= user.email %></td>
        </tr>
        <% end %>
</table>